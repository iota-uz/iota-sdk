templ Chat() {
	<style type="text/css">
		.wrapper {
			--primary-color: #2E67B4;
			--stroke-color: #BDC8D2;
			--btn-radius: 0.75rem;

			border-radius: 0.5rem;
			max-width: 480px;
		}

		.header{
			display: flex;
			flex-direction: row;
			align-items: center;
			gap: 0.5rem;
			background-color: var(--Black-colors-Color-black, #0A223E);
			color: var(--White-colors-Color-white, #FFFFFF);
			border-radius: 0.5rem 0.5rem 0 0;
			padding: 1.25rem;
		}

		.header-text {
			flex: 1;
		}

		.body {
			display: flex;
			flex-direction: column;
			gap: 0.75rem;
			padding: 1.25rem;
		}

		.faq {
			display: flex;
			flex-wrap: wrap;
			flex-direction: row;
			gap: 0.75rem;
		}

		.faq-item {
			cursor: pointer;
			border: 1px solid #ccc;
			border-radius: 9999px;
			padding: 0.75rem 1rem;
			font-size: 0.875rem;
		}

		.textarea {
			border-radius: 0.5rem;
			padding: 1rem;
			resize: none;
			border-radius: 12px;
			border: 0.5px solid var(--stroke-color);
			background: var(--Gray-colors-Gray-input-color, #F2F5F8);
		}

		.text-sm {
			font-size: 0.875rem;
		}

		.text-md {
			font-size: 1rem;
		}
		
		.text-lg {
			font-size: 1.25rem;
		}

		.btn {
			border: none;
			border-radius: var(--btn-radius);
			padding: 1rem 1.25rem;
			cursor: pointer;
		}

		.btn-primary {
			background-color: var(--primary-color);
			color: #FFFFFF;
		}

		.btn-secondary {
			border: 1px solid var(--stroke-color);
			color: var(--primary-color);
		}
	</style>
	<div class="wrapper">
		<div class="header">
			@ChatIcon()
			<div class="header-text">
				<div class="text-lg">
					AI chat bot
				</div>
				<div class="text-sm">
					Наш AI-бот готов помочь вам круглосуточно
				</div>
			</div>
			<div>
				@icons.CaretDown(icons.Props{
					Size: "20",
				})
			</div>
		</div>
		<div class="body">
			<textarea
				rows="5"
				placeholder="Введите вопрос"
				class="textarea"
			></textarea>
			<div class="faq">
				<div class="faq-item">
					Как продлить полис?
				</div>
				<div class="faq-item">
					Где найти номер договора?
				</div>
				<div class="faq-item">
					Как подать заявление на страховой случай?
				</div>
			</div>
			<button class="btn btn-primary">
				Отправить
			</button>
			<button class="btn btn-secondary">
				Запрос обратного звонка
			</button>
		</div>
	</div>
}
