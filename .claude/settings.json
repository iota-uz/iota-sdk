  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "make fix fmt && make fix imports && go vet ./..."
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "make fix fmt && make fix imports && go vet ./..."
          }
        ]
      }
    ]
  }
