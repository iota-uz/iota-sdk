# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_GLOBAL_RPS=1000
RATE_LIMIT_STORAGE=memory
# RATE_LIMIT_REDIS_URL=redis://localhost:6379
GOOGLE_CLIENT_ID=example-client-id
GOOGLE_CLIENT_SECRET=example-client-secret
GOOGLE_REDIRECT_URL=http://localhost:3000/auth/google/callback
SID_COOKIE_KEY=sid

# Health Endpoint Configuration
# When false (default): /health returns simple {"status": "healthy"} response
# When true: /health returns detailed health checks with database, system metrics
HEALTH_DETAILED=false

# Two-Factor Authentication Configuration
# TOTP Encryption Key - REQUIRED for production environments
# This key is used to encrypt TOTP secrets at rest using AES-256-GCM
# Generate a strong random key (minimum 32 bytes recommended):
#   openssl rand -base64 32
# Keep this key secret and rotate it periodically for security
# WARNING: If not set, TOTP secrets will be stored in plaintext (development only)
# TOTP_ENCRYPTION_KEY=your-strong-random-encryption-key-here

# TOTP Issuer Name (shown in authenticator apps)
# TOTP_ISSUER=IOTA ERP

# OTP Code Settings
# OTP_CODE_LENGTH=6
# OTP_TTL_SECONDS=300
# OTP_MAX_ATTEMPTS=3

# OTP Delivery Configuration
# Enable email OTP delivery (requires SMTP configuration below)
# OTP_ENABLE_EMAIL=false

# Enable SMS OTP delivery (requires Twilio configuration below)
# OTP_ENABLE_SMS=false

# SMTP Configuration (for email OTP delivery)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@yourdomain.com

# Twilio Configuration (for SMS OTP delivery and other SMS features)
